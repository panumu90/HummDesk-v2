# HummDesk v2 Production Environment Variables
# Copy this file to .env.production and fill in the values

# Application Version
VERSION=latest

# Server Configuration
NODE_ENV=production
PORT=5000
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS Configuration
CORS_ORIGIN=https://your-domain.com

# PostgreSQL Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=hummdesk_v2
DB_USER=postgres
DB_PASSWORD=your-super-secure-postgres-password

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-super-secure-redis-password
REDIS_DB=0

# MinIO S3 Storage
MINIO_ROOT_USER=your-minio-admin-user
MINIO_ROOT_PASSWORD=your-super-secure-minio-password
MINIO_ENDPOINT=http://minio:9000
MINIO_BUCKET=hummdesk-uploads

# Anthropic Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key

# Docker Registry (optional - for remote deployment)
DOCKER_REGISTRY=docker.io
DOCKER_NAMESPACE=hummdesk
DOCKER_USERNAME=your-docker-username
DOCKER_PASSWORD=your-docker-password

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@hummdesk.com

# Monitoring & Analytics
SENTRY_DSN=
ANALYTICS_ID=

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
