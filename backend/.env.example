# ========================================
# HummDesk v2 - Backend Environment Variables
# ========================================

# Server Configuration
NODE_ENV=development
PORT=5000
LOG_LEVEL=debug

# Database (PostgreSQL)
# Development: Use local PostgreSQL
# Production: Railway will set DATABASE_URL automatically
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/hummdesk_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hummdesk_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false

# Redis
# Development: Use local Redis
# Production: Railway will set REDIS_URL automatically
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false

# JWT Authentication
# CRITICAL: Generate secure secrets in production!
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secret-key-here-replace-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Claude AI
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxx
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7

# CORS
# Development: Allow localhost
# Production: Set to your Vercel frontend URL
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# WebSocket
# Must match CORS_ORIGIN
WS_CORS_ORIGIN=http://localhost:5173

# Session
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-session-secret-here-replace-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email (Optional - for notifications)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=
SMTP_FROM=noreply@hummdesk.com

# Feature Flags
ENABLE_AI_CLASSIFICATION=true
ENABLE_AI_DRAFTS=true
ENABLE_KNOWLEDGE_BASE=true
ENABLE_WEBSOCKETS=true

# Monitoring (Optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
